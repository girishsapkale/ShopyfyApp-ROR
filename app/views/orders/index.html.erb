<h1>Listing Orders</h1>
<table id="orders" class="table table-striped table-bordered" cellspacing="0" width="90%">
  <thead>
    <tr>
      <th>Order ID</th>
      <th>Order Email</th>
      <th>Order Name</th>
      <th>Order Gateway</th>
      <th style="color:orange;">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.id %></td>
      <td><%= order.email %></td>
      <td><%= order.name %></td>
      <td><%= order.gateway %></td>
      <td><%= link_to 'Edit', edit_order_home_path(order) %></td>
      <%#= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
    </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Order', new_order_homes_path %>
