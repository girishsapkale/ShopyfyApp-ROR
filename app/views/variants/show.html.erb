<p id="notice"><%= notice %></p>

<%= link_to 'Edit', edit_variant_path(@variant) %> |
<%= link_to 'Back', variants_path %>

<h3>Search & Update According to Variant's Titles Value</h3>
<%= form_tag '/update_variants_value', :method => 'put', :class => "form-inline" do %>
<div class="form-group">
  <label for="exampleInputName2">Search Variant</label>
  <%= text_field_tag :query_1, params[:query], placeholder: "Search Any Variant", class: "form-control"%>
  <%= text_field_tag :query_2, params[:query], placeholder: "Search Any Variant", class: "form-control"%>
</div>
<button type="submit" class="btn btn-warning">Search Variant</button>
<% end %>
<br />
<% if @productss.present? %>
<%= form_tag("/variants_update_title", method: :put) do %>
<div class="table-responsive">
  <table id="variants" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
      <tr>
        <th>Product Name</th>
        <!-- <th>Variant ID</th> -->
        <th>Variant title</th>
        <th>Variant sku</th>
        <th>Variant old price</th>
        <th>Add More in price</th>
      </tr>
    </thead>
    <tbody>
      <% @productss.each do |product| %>
      <% product.variants.each do |variant| %>
      <% if variant.title.downcase.include? "#{@params_query.downcase}"  %>      
      <tr>
        <td><%= product.title %></td>
        <!-- <td><%#= variant.id %></td> -->
        <td><%= variant.title %></td>
        <td><%= variant.sku %></td>
        <td><%= variant.price %></td>
        <td><%= text_field_tag "updated_price_of_variant_#{variant.id}", nil, :placeholder => 'Add More in price..' %></td>
        <!-- <td><%= variant.grams %>|</td> -->
        <!-- <td><%#= variant.diamond %></td> -->
        <!-- <td><%#= link_to 'Show', variant %></td>
          <td><%#= link_to 'Edit', edit_variant_path(variant) %></td>
          <td><%#= link_to 'Destroy', variant, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
      <% end %>
      <% end %>
      <% end %>
    </tbody>
  </table>
</div>
<div class="actions">
  <button type="submit" class="btn btn-primary">Update Price</button>
</div>
<% end %>
<% end %>


