<h1>Listing Metals</h1>

<table id="almetals" class="table">
  <thead>
   
    <tr>
      
      <th>Product</th>
      <th>Metal Name</th>
      <th>Price</th>
      <th>Edit</th>
    </tr>
 
  </thead>

  <tbody>
  
    <% @metals.each do |metal| %>
      <tr>
        <td><%= metal.product.title %></td>
        <td><%= link_to metal.name, edit_metal_path(metal),remote: :true, "data-toggle" => "modal", 'data-target' => '#myModal' %></td>
        <td><%= metal.price %></td>
        <td><%= link_to 'Edit',  edit_metal_path(metal),remote: :true, "data-toggle" => "modal", 'data-target' => '#myModal'  %></td>
      </tr>
    <% end %>

  </tbody>
</table>

